var x:intlist;
var y:intlist;
data intlist = #nil | #cons of int * intlist;

fun append(a:intlist,b:intlist):intlist
    { var z:intlist;
      begin
         case a of { #nil => z:= b
                   | #cons(v,L) => z:=#cons(v,append(L,b)) 
                   };
         return z;
      end
    };

begin

   x:= #cons(1,#cons(2,#nil())); y:= #cons(3,#cons(4,#nil()));
   x:= append(x,y);                    % to illustrate a call 

end
